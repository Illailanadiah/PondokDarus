<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainpage_bg"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/salamLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/salamlogo"
        app:layout_constraintBottom_toTopOf="@id/mainbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/mainbtn"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/salamLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/tepagreen_bkg"
        android:layout_marginTop="40dp"
        android:text="@string/login_btn"
        android:padding="20dp"
        android:textSize="20sp"
        android:textColor="@color/satin"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
