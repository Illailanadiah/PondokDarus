<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".GuardianLoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:drawablePadding="8dp"
            android:drawableLeft="@drawable/baseline_arrow_back_ios_new_24"
            android:gravity="center"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="SALAM FINANCE"
            android:textColor="@color/tepapagreen"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN UP"
        android:layout_marginTop="30dp"
        android:textSize="35sp"
        android:letterSpacing="0.2"
        android:textColor="@color/tepapagreen"
        android:textStyle="bold"/>


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/paddingtopcorner_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="STUDENT"
                android:textColor="@color/tepapagreen"
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fullname"
                android:layout_width="340dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:hint="Full name"
                android:padding="16dp"
                android:textColor="@color/tepapagreen"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/ic_num"
                android:layout_width="340dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:hint="I/C number"
                android:padding="20dp"
                android:textColor="@color/tepapagreen"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/DOB"
                android:layout_width="340dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:hint="DOB [dd/mm/yy]"
                android:padding="20dp"
                android:textColor="@color/tepapagreen"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/grade"
                android:layout_width="340dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:hint="Grade"
                android:padding="20dp"
                android:textColor="@color/tepapagreen"
                android:textSize="15sp" />

            <Button
                android:id="@+id/loginbtn"
                style="@android:style/Widget.Button"
                android:layout_width="230dp"
                android:layout_height="60dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="80dp"
                android:background="@drawable/tepagreen_bkg"
                android:padding="8dp"
                android:text="NEXT"
                android:textColor="@color/white"
                android:textSize="20sp" />


        </LinearLayout>


</LinearLayout>

