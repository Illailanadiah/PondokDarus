<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/salamfinance_bg"
    tools:context=".GuardianMainActivity">

    <!-- Tool bar -->
    <include
        layout="@layout/toolbar_main"/>

    <!-- Contact Button -->
    <Button
        android:id="@+id/contact_btn"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar_main"
        android:layout_marginTop="185dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/brown_bkg"
        android:padding="15dp"
        android:text="@string/contact_btn"
        android:textAlignment="center"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="18sp"
        android:letterSpacing="0.2"
        android:elevation="12dp"
        android:textColor="@color/satin"/>

    <!-- Content Container -->
    <LinearLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/contact_btn"
        android:layout_alignParentBottom="true"
        android:background="@drawable/paddingtopcorner_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Payment button -->
        <Button
            android:id="@+id/payment_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/tepagreen_bkg"
            android:drawableTop="@drawable/payment"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center_horizontal"
            android:letterSpacing="0.2"
            android:padding="25dp"
            android:text="@string/payment_btn"
            android:textColor="@color/satin"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <!-- Profile button -->
        <Button
            android:id="@+id/profile_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/tepagreen_bkg"
            android:drawableTop="@drawable/profile"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center_horizontal"
            android:letterSpacing="0.2"
            android:padding="25dp"
            android:text="@string/profile_btn"
            android:textColor="@color/satin"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>
