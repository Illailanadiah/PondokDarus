<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainpage_bg"
    tools:context=".StaffSignUpActivity">

    <include layout="@layout/toolbar_login"/>

    <ImageView
        android:id="@+id/salamLogo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/salam_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/signup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/salamLogo"
        android:layout_centerInParent="true"
        android:text="SIGN UP AS :"
        android:textStyle="bold"
        android:textColor="@color/tepapagreen"
        android:textSize="22sp"/>

    <Button
        android:id="@+id/clerk_signup"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/signup_text"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/tepagreen_bkg"
        android:padding="20dp"
        android:text="@string/clerk_head"
        android:textColor="@color/satin"
        android:textSize="20sp" />

    <Button
        android:id="@+id/principal_signup"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/clerk_signup"
        android:layout_centerInParent="true"
        android:background="@drawable/tepagreen_bkg"
        android:padding="20dp"
        android:text="@string/principal_head"
        android:textColor="@color/satin"
        android:textSize="20sp" />

</RelativeLayout>
