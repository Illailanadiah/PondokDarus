<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background2"
    android:gravity="center_horizontal"
    tools:context=".PrincipalReportActivity">

    <include layout="@layout/toolbar_general"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REPORT"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:textSize="35sp"
        android:letterSpacing="0.2"
        android:textColor="@color/tepapagreen"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <Button
            android:id="@+id/gradeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Grade"
            android:textSize="15sp"
            android:textColor="@color/tepapagreen"
            android:background="@drawable/report_button_bg"/>

        <Button
            android:id="@+id/monthBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Month"
            android:textSize="15sp"
            android:textColor="@color/tepapagreen"
            android:background="@drawable/report_button_bg"/>

        <Button
            android:id="@+id/yearBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Year"
            android:textSize="15sp"
            android:textColor="@color/tepapagreen"
            android:background="@drawable/report_button_bg"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="556dp"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/gradeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/reportview_bg" />

        <FrameLayout
            android:id="@+id/monthFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <FrameLayout
            android:id="@+id/yearFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>