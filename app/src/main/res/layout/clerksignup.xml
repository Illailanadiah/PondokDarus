<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ClerkSignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="20dp"
            android:drawablePadding="8dp"
            android:drawableStart="@drawable/baseline_arrow_back_ios_new_24"
            android:gravity="center" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:text="@string/salamfinance"
            android:textColor="@color/tepapagreen"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:letterSpacing="0.2"
        android:textSize="35sp"
        android:textColor="@color/tepapagreen"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/paddingtopcorner_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="@string/CLERK"
            android:textColor="@color/tepapagreen"
            android:textSize="25sp"
            android:letterSpacing="0.2"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/fullname"
            android:layout_width="340dp"
            android:layout_height="55dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/text_bg"
            android:gravity="center_vertical"
            android:hint="@string/fullname"
            android:padding="16dp"
            android:textColor="@color/tepapagreen"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/ic_num"
            android:layout_width="340dp"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/text_bg"
            android:gravity="center_vertical"
            android:hint="@string/icnum"
            android:padding="20dp"
            android:textColor="@color/tepapagreen"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/staffid"
            android:layout_width="340dp"
            android:layout_height="55dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/text_bg"
            android:gravity="center_vertical"
            android:hint="@string/staffid"
            android:padding="20dp"
            android:textColor="@color/tepapagreen"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:drawableStart="@drawable/baseline_check_box_outline_blank_24"
            android:drawablePadding="8dp"
            android:text="@string/confirmation"
            android:textSize="14sp"
            android:textColor="@color/tepapagreen"
            android:buttonTint="@color/tepapagreen" />

        <Button
            android:id="@+id/nextbtn"
            style="@android:style/Widget.Button"
            android:layout_width="230dp"
            android:layout_height="65dp"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/tepagreen_bkg"
            android:padding="8dp"
            android:text="@string/next"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </LinearLayout>
</LinearLayout>
