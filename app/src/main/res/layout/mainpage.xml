<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/salamfinance_bg"
    tools:context=".MainActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@drawable/baseline_logout_24"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="20dp"/>
        </LinearLayout>


        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/contact_btn"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/brown_bkg"
            android:padding="15dp"
            android:text="CONTACT US"
            android:textAlignment="center"
            android:textColor="@color/satin"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18sp"
            android:letterSpacing="0.2"
            android:elevation="12dp"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/contact_btn"
    android:layout_marginTop="-45dp">



                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:background="@drawable/paddingtopcorner_bg"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                        <Button
                            android:id="@+id/payment_btn"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="60dp"
                            android:drawableTop="@drawable/payment"
                            android:gravity="center_horizontal"
                            android:drawablePadding="10dp"
                            android:text="PAYMENT"
                            android:textColor="@color/satin"
                            android:fontFamily="@font/poppins_semibold"
                            android:textStyle="bold"
                            android:padding="25dp"
                            android:textSize="20sp"
                            android:letterSpacing="0.2"
                            android:background="@drawable/tepagreen_bkg"/>

                        <Button
                            android:id="@+id/_btn"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="30dp"
                            android:drawableTop="@drawable/profile"
                            android:gravity="center_horizontal"
                            android:text="PROFILE"
                            android:textColor="@color/satin"
                            android:fontFamily="@font/poppins_semibold"
                            android:textStyle="bold"
                            android:padding="25dp"
                            android:textSize="20sp"
                            android:letterSpacing="0.2"
                            android:background="@drawable/tepagreen_bkg"/>
                </LinearLayout>

        </RelativeLayout>

                </LinearLayout>
</RelativeLayout>