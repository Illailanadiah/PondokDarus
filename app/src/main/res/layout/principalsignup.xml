<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".GuardianSignUpActivity">

    <include layout="@layout/toolbar_general"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/signup_head"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="15dp"
        android:textSize="35sp"
        android:textColor="@color/tepapagreen"
        android:textStyle="bold"
        android:gravity="center"
        android:letterSpacing="0.2"/>


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/paddingtopcorner_bg"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="PRINCIPAL"
                android:textColor="@color/tepapagreen"
                android:textSize="25sp"
                android:letterSpacing="0.2"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/fullname"
                android:layout_width="340dp"
                android:layout_height="55dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:hint="Full name"
                android:padding="16dp"
                android:textColor="@color/tepapagreen"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/ic_num"
                android:layout_width="340dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:hint="I/C number"
                android:padding="20dp"
                android:textColor="@color/tepapagreen"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/staffid"
                android:layout_width="340dp"
                android:layout_height="55dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/text_bg"
                android:gravity="center_vertical"
                android:hint="Staff ID"
                android:padding="20dp"
                android:textColor="@color/tepapagreen"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/agreement"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="15dp"
                android:drawablePadding="8dp"
                android:text="I agree that all the information are correct"
                android:textSize="14sp"
                android:textColor="@color/tepapagreen"
                android:buttonTint="@color/tepapagreen"/>


            <Button
                android:id="@+id/principalNextButton"
                style="@android:style/Widget.Button"
                android:layout_width="230dp"
                android:layout_height="60dp"
                android:layout_marginTop="80dp"
                android:layout_marginBottom="80dp"
                android:background="@drawable/tepagreen_bkg"
                android:padding="8dp"
                android:text="NEXT"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>
</LinearLayout>

