<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    android:background="@drawable/background2"
    tools:context=".PaymentReceiptActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/padding_bg"
        android:padding="16dp">

        <TextView
            android:id="@+id/salamfinance_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SALAM FINANCE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/tepapagreen"
            android:paddingVertical="8dp" />
        <TextView
            android:id="@+id/pondok_darussalam_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PONDOK DARUSSALAM KUALA IBAI"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/tepapagreen"
            android:paddingVertical="8dp" />


        <!-- Bill Name -->
        <TextView
            android:id="@+id/bill_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/tepapagreen"
            android:paddingVertical="8dp" />

        <TextView
            android:id="@+id/bill_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tuition Fee Form 4 "
            android:textSize="16sp"
            android:paddingVertical="4dp" />

        <!-- Bill Details -->
        <TextView
            android:id="@+id/bill_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill Details"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/tepapagreen"
            android:paddingVertical="8dp" />

        <!-- Amount -->
        <TextView
            android:id="@+id/bill_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:text="Semester 1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/amount_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amount"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/tepapagreen"
            android:paddingVertical="8dp" />

        <TextView
            android:id="@+id/amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RM 500.00"
            android:textSize="16sp"
            android:paddingVertical="4dp" />

        <!-- Date -->
        <TextView
            android:id="@+id/date_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/tepapagreen"
            android:paddingVertical="8dp" />

        <!-- Payment Method -->
        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="4dp"
            android:text="10 July 2024"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/payment_method_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Method"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/tepapagreen"
            android:paddingVertical="8dp" />

        <TextView
            android:id="@+id/payment_method"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FPX Online Banking"
            android:textSize="16sp"
            android:paddingVertical="4dp" />

        <!-- Transaction ID -->
        <TextView
            android:id="@+id/transaction_id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transaction ID"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/tepapagreen"
            android:paddingVertical="8dp" />

        <TextView
            android:id="@+id/transaction_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1234567890"
            android:textSize="16sp"
            android:paddingVertical="4dp" />

        <!-- Done Button -->
        <Button
            android:id="@+id/done_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="24dp"
            android:background="@drawable/tepagreen_bkg"
            android:textColor="@color/satin"
            />
    </LinearLayout>
</ScrollView>
